/* pages/lovewallDetail2/lovewallDetail2.wxss */
@import "../../util/wxParse/wxParse.wxss";
.navbar{
    position: fixed;
    background-color: #fff;
    height: 180rpx;
    width: 100%;
    line-height: 250rpx;
    background-color: #7848b6;
    z-index: 9999;
    top: 0;
}
.back{
    position: absolute;
    top: 15rpx;
    font-size:12pt;
    margin-left: 20rpx;
}
.nickname_avatar{
    display: flex;
    height: 150rpx;
    background-color:#fff;
    align-items: center;
    padding-left: 30rpx;
    margin-bottom: 1px;
}
.avatar image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.nickname{
    margin-left: 20rpx;
    font-size: 30rpx;
    color: #5466a5;
    font-weight: bold;
}
.exhibition{
    padding: 0 30rpx 30rpx 30rpx;
    background-color: #fff;
    margin-bottom: 30rpx;
}
.title{
    font-weight: bold;
    font-size: 35rpx;
    margin-bottom: 25rpx;
}
.content{
    font-size: 30rpx;
    color: #5f5f5f;
    margin-bottom: 30rpx;
}
.time_views{
    display: flex;
}

.time{
    margin-top: 20rpx;
    font-size: 25rpx;
    color: #949494;
}
.views{
    font-size: 28rpx;
    margin-left: 20rpx;
    color: #5f5f5f;
}
.likecount{
    color: #696969;
    font-size: 30rpx;
}
.operate{
    position:absolute;
    margin-top: 20rpx;
    right: 20rpx;
}
.operateicon{
    margin-left: 20rpx;
}
.comment{
    position: relative;
    background-color: #fff;
    display: flex;
    padding-top: 20rpx;
    padding-left: 20rpx;
}
.commentConent{
    font-size: 30rpx;
    margin-top: 20rpx;
    color: #494646;
    margin-left: 20rpx;
}
.commentTime{
    font-size: 25rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    color: #494646;
    margin-left: 20rpx;
}
.likes{
    padding: 20rpx 0;
    display: flex;
    background-color: #fff;
    align-items: center;
    position: relative;
}
.likeTime{
    color: #494646;
    font-size: 25rpx;
    position: absolute;
    right: 20rpx;
}
