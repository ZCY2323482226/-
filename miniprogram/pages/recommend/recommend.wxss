/* pages/recommend/recommend.wxss */
/* logo */
.logo{
    position: absolute;
    display: flex;
    align-items: center;
    /* bottom: 100rpx; */
    top: 850rpx;
    left: 170rpx;
    width: 400rpx;
    height: 140rpx;
    z-index: -10;
    opacity: 0.7;
    /* background-color: red; */
}
.logo image{
    width: 140rpx;
    height: 140rpx;
}
.logo .name{
    margin-bottom: 20rpx;
    /* font-family: "Lucida Calligraphy", cursive, serif, sans-serif; */
    font-family: 'LeGao';
    font-size:70rpx;
    font-weight: bold;
    color: #7848b6;
}
.area{
    position: fixed;
    right:0rpx;
    bottom:0rpx;
    width: 100vw;
    height: 100vh;
    z-index: 100;
}
movable-view {pointer-events: auto;}
movable-area {pointer-events: none;}
/* 排行榜 */
.leaderboard-box{
    position: absolute;
    top: 200rpx;
    width: 630rpx;
    left: 30rpx;
    height: 120rpx;
    background-color: rgba(119, 85, 173, 0.3);
    border-radius: 20rpx;
    /* opacity: 0.3; */
    margin: auto;
    padding-top: 20rpx;
    padding-left: 50rpx;
}
.leaderboard-box .leaderboard{
    font-family: 'LeGao';
    color: #fff;
    font-size: 60rpx;
    /* font-weight: bold; */
    font-weight: 700;
}
.leaderboard-box .leaderboard-Englist{
    color: #fff;
    font-size: 30rpx;
}
.publish{
    position: absolute;
    top: 85vh;
    left: 83vw;
    bottom: 60rpx;
    right: 40rpx;
    color: #fff;
    width: 100rpx;
    height: 100rpx;
    background-color: #7848b6;
    border-radius: 50%;
    /* 为了垂直居中 */
    line-height: 100rpx;
    text-align: center;
    box-shadow: 0 0 5px #686868;
    z-index: 100;
}
.topimage{
    height: 250px;
}
.avatar image{
    margin-left: 20rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.item{
    background-color: #fff;
    padding-top: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 2px solid #f6f6f6;
    /* border-radius: 10rpx; */
    /* margin-bottom: 2px; */
}
.allcontent{
    position: relative;
    bottom: 80rpx;
    border-radius: 30rpx 30rpx 0 0;
    overflow: hidden;
}
.tab-box{
    width: 100%;
    background-color: #fff;
}
.item_content{
    position: relative;
    display: flex;
    height: 290rpx;
}
.time_views{
    display: flex;
}
.time_views .views{
    color: #a4a4a4;
    margin-top: 20rpx;
    margin-left: 20rpx;
    font-size: 25rpx;
}
.item .minitem{
    margin-left: 20rpx;
}
.nickname{
    font-size: 30rpx;
    color: #7848b6;
    font-weight: bold;
}
.content{
    display: flex;
    height: 160rpx;
    /* width: 400rpx; */
    /* overflow: hidden; */
    word-wrap:break-word; 
    text-overflow: ellipsis;
    font-size: 28rpx;
    margin-top: 20rpx;
    color: #686868;
    /* background-color: red; */
}
.cover{
    position: relative;
    overflow: hidden;
    bottom: 50rpx;
    width: 150rpx;
    height: 150rpx;
    border-radius: 20rpx;
    /* background-color: yellow; */
}
.cover image{
    width: 100%;
    height: 100%;
}
.time{
    margin-top: 20rpx;
    font-size: 25rpx;
    color: #949494;
}
.likecount{
    color: #696969;
    font-size: 30rpx;
}
.operate{
    position: absolute;
    bottom: 0;
    right: 20rpx;
}
.operateicon{
    margin-left: 20rpx;
}
/* 评论的样式 */
.commentlist{
    max-height:120rpx;
    overflow: hidden;
}
.countComment{
    color: #4a7ab1;
    font-size: 29rpx;
    font-weight: bold;
    margin-left: 135rpx;
    /* text-align: center; */
}
.comment{
    height: 40rpx;
    overflow: hidden;
    margin-left: 135rpx;
    font-size: 28rpx;
}
.comment_nickname{
    color: #336586;
}
/* 排行样式 */
.paihang{
    font-size: 100rpx;
    text-align: center;
    font-weight: bold;
}
/* 下拉加载 */
.loading{
    margin: auto;
    width: 91px;
    /* background-color: red; */
}